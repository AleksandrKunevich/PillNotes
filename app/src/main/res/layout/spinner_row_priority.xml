<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/background_home_fragment"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/spinnerPriorityImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_error_outline_24_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinnerPriorityRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:background="?attr/background_home_fragment"
        android:text=""
        android:textColor="?attr/text_color_note_enter_text"
        android:textSize="@dimen/size_spinner_priority_text"
        app:layout_constraintBottom_toBottomOf="@id/spinnerPriorityImage"
        app:layout_constraintStart_toEndOf="@id/spinnerPriorityImage"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>